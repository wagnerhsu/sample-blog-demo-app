extends layout

block content
  .row.main-list
    each item in movies
      .col-md-2
        .thumbnail.card
          a(href="/detail/#{item.id}", title="#{item.title}")
            img(src="/images/#{item.poster}", alt="#{item.title}")
          .caption
            h4.caption-title #{item.title}
            div.caption-btn
              a.btn.btn-primary.btn-sm(href="/detail/#{item.id}", role="button") 查看详情